<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.padc.beauty.components.DynamicHeightImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/nailarttutorial"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_color"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium">
        <com.padc.beauty.components.DynamicHeightImageView
            android:id="@+id/iv_nailart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nailart2"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_nailart_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Color Blocking Lace Bow Nails"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_color"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium">
        <com.padc.beauty.components.DynamicHeightImageView
            android:id="@+id/iv_nairlart1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nairlart1"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_nailart_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Color Blocking Lace Bow Nails"/>

    </LinearLayout>
</LinearLayout>